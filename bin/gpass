#!/usr/bin/env bash

plen=${1:-16}
simple=${2:-""}
chars="A-Za-z0-9_"
[ -z "$simple" ] && chars="$chars'"'!@#$%^&*()+=[]{};:",./<>?|\\'

t="$(head /dev/urandom | tr -dc "${chars}" | head -c${plen})"
if [ ! -z "$DISPLAY" ]; then
    echo -ne "$t" | xclip -in -selection clipboard
else 
    echo -ne "$t"
fi
