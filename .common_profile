umask 022

# env for php cronjobs
export APPLICATION_ENV="development"
export EDITOR=vim

if [ -f "$HOME/dev/term-setup/.profile" ]; then
    source "$HOME/dev/term-setup/.profile"
fi

# setup go ...
GOCACHE="$HOME/.cache/go-build"
GOPATH="$HOME/go"
PATH="$HOME/dev/term-setup/bin:$GOPATH/bin:$PATH" 

# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
  . "$HOME/.bashrc"
    fi
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi
alias term='~/dev/term-setup/ubuntu-on-WSL.sh xfce4-terminal -e "zsh -l"'
